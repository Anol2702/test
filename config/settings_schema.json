[
  {
    "name": "theme_info",
    "theme_name": "Grocery Store Theme",
    "theme_version": "1.0.0",
    "theme_author": "Custom Theme",
    "theme_documentation_url": "https://example.com/docs",
    "theme_support_url": "https://example.com/support"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary color",
        "default": "#28a745"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary color",
        "default": "#6c757d"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent color",
        "default": "#ffc107"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text color",
        "default": "#212529"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background color",
        "default": "#ffffff"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "type_header_font",
        "label": "Heading font",
        "default": "playfair_display_n4"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "label": "Body font",
        "default": "inter_n4"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "label": "Heading scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "default": 120
      },
      {
        "type": "range",
        "id": "body_scale",
        "label": "Body font scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "default": 100
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "32 x 32px .png required"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "label": "Enable predictive search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_vendor",
        "label": "Show vendor in search results",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_price",
        "label": "Show price in search results",
        "default": true
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "text",
        "id": "social_twitter_handle",
        "label": "Twitter handle",
        "info": "Without @"
      },
      {
        "type": "url",
        "id": "social_facebook_link",
        "label": "Facebook"
      },
      {
        "type": "url",
        "id": "social_instagram_link",
        "label": "Instagram"
      },
      {
        "type": "url",
        "id": "social_twitter_link",
        "label": "Twitter"
      },
      {
        "type": "url",
        "id": "social_youtube_link",
        "label": "YouTube"
      }
    ]
  }
]
